      <geom type="cylinder" size="0.05 0.02" pos="1.125 -0.65 0.10" material="yellow"/>
    </body>

    <!-- ▼ 中段（red）のコイン（10個） -->
    <body>
      <!-- 半径0.85, 高さ0.20 -->
      <geom type="cylinder" size="0.05 0.02" pos="0.85 0.0 0.20" material="yellow"/>
      <geom type="cylinder" size="0.05 0.02" pos="0.69 0.50 0.20" material="yellow"/>
